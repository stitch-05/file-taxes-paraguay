####
# Wget
####
export WGET_OUTPUT="-qO-" # Debug -O-
export WGET_FLAGS="--cipher=DEFAULT:!DH --no-check-certificate"

## If you have issues with tax office's certificate try using the flags below
# export WGET_FLAGS="--secure-protocol tlsv1"

